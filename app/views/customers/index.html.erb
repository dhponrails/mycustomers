<h1>Listing customers for <%= @mailing_list.title %></h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Birthmonth</th>
    <th>Birthday</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Subscriptionkey</th>
  </tr>

<% @mailing_list.customers.each do |customer| %>
  <tr>
    <td><%=h customer.firstname %></td>
    <td><%=h customer.lastname %></td>
    <td><%=h customer.birthmonth %></td>
    <td><%=h customer.birthday %></td>
    <td><%=h customer.email %></td>
    <td><%=h customer.phone %></td>
    <td><%=h customer.subscriptionkey %></td>
    <td><%= link_to 'Show', [@mailing_list, customer] %></td>
    <td><%= link_to 'Edit', edit_mailing_list_customer_path(@mailing_list, customer) %></td>
    <td><%= link_to 'Destroy', [@mailing_list, customer], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

