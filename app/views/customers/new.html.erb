<h1>New customer</h1>

<% form_for([@mailing_list, @customer]) do |f| %>
  <%= f.error_messages %>
 <%= hidden_field_tag :mailing_list_id, params[:mailing_list_id] %>
  <%= @mailing_list.id %>
  <p>
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname %>
  </p>
  <p>
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname %>
  </p>
  <p>
    <%= f.label :birthmonth %><br />
    <%= f.text_field :birthmonth %>
  </p>
  <p>
    <%= f.label :birthday %><br />
    <%= f.text_field :birthday %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :subscriptionkey %><br />
    <%= f.text_field :subscriptionkey %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', mailing_list_customers_path(@mailing_list) %>
